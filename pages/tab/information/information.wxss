.inform{
  width: 100%;
  padding: 40rpx 0 0 4%;
  display: flex;
  flex-wrap: wrap;
}

.inform_for{
  width: 27%;
  height: 230rpx;
  margin: 0 2.5% 30rpx;
  background: #FFFFFF;
  box-shadow: 0px 0px 12px 0px #ECEFF8;
  border-radius: 20px;
  padding: 35rpx 0 0;
  text-align: center;
}
.inform_for image{
  width: 87rpx;
  height: 85rpx;
  margin: 0 auto;
}
.inform_for view{
  display: flex;
  align-items: center;
  justify-content: center;
  height: 60rpx;
  font-size: 26rpx;
  font-weight: 400;
  color: #333333;
  width: 100%;
  padding: 25rpx 35rpx 0;
}
.addHover{
  background-color: #C0C4CC;
}