
.view_input{
  width: 100%;
  height: 88rpx;
  background: #FFFFFF;
  border-radius: 44rpx;  
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 0 30rpx;
}
.view_input image{
  width: 36rpx;
  height: 40rpx;
}
.view_input input{
  width: 90%;
}
.tab{
  width: 100%;
  height: 95rpx;
  background: #F5F6F7;
  border-radius: 12rpx;
  margin-top: 40rpx;
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 10rpx;
}
.tab view{
  width: 48%;
  height: 100%;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 28rpx;
  font-family: Microsoft YaHei;
  font-weight: 400;
  color: #999999;
}
.workList{
  width: 100%;
  height: 79%;
  padding: 20rpx 0;
}
.workList_body{
  width: 100%;
  height: 100%;
  overflow-y: auto;
}
.workList_for{
  width: 100%;
  background: #FFFFFF;
  border-radius: 20rpx;
  padding: 40rpx 28rpx;
  position: relative;
  margin-bottom: 30rpx;
}
.workList_for view:first-child{
  font-size: 28rpx;
font-family: Microsoft YaHei;
font-weight: 400;
color: #333333;
}
.workList_for view:nth-child(2){
  font-size: 22rpx;
font-family: Microsoft YaHei;
font-weight: 400;
color: #666666;
padding-top: 40rpx;
}
.workList_for view:last-child{
  position: absolute;
  bottom: 30rpx;
  right: 30rpx;
  width: 87rpx;
height: 45rpx;
border-radius: 8rpx;
font-size: 22rpx;
font-weight: 400;
color: #FFFFFF;

display: flex;
align-items: center;
justify-content: center;
}
.addHover{
  background-color: #C0C4CC;
}