.sign{
  text-align: center;
}
.sign image:first-child{
  width: 200rpx;
  height: 200rpx;
  background: #ccc;
  margin: 0 auto;
  margin-top: 80rpx;
  
}
.sign view:nth-child(2){
  width: 100%;
  font-size: 32rpx;
font-family: SJyunhei;
text-align: center;
font-weight: bold;
color: #333333;
margin-top: 30rpx;
}
.sign view:nth-child(3){
  width: 100%;
  font-size: 24rpx;
font-family: Microsoft YaHei;
font-weight: 400;
color: #333333;
padding: 380rpx 0 0 0;
}

.sign view:nth-child(4){
  width: 100%;
  font-size: 24rpx;
font-family: Microsoft YaHei;
font-weight: 400;
color: #333333;
padding: 10rpx 0 30rpx;
}

.sign view:last-child{
  width: 100%;
  text-align: center;
  padding-top: 30rpx;
  color: #B9B9B9;
  font-size: 26rpx;
}
.show{
  width: 100%;
  height: 100%;
  position: fixed;
  left: 0;
  top: 0;
  z-index: 7;
  background: rgba(0, 0, 0, 0.6);
  display: flex;
  align-items: center;
  justify-content: center;
  padding: 0 70rpx;
}
.show_box{
  width:100%;
  height: 40%;
  background: #fff;
  border-radius: 20rpx;
  padding: 200rpx 30rpx 0;
  text-align: center;
}
.show_box view:first-child{
  font-size: 46rpx;
  font-family: SJyunhei;
  font-weight: bold;
  color: #333333;
}
.show_box view:nth-child(2){
  font-size: 28rpx;
  color: #6d6c6c;
  padding: 15rpx 0 25rpx;
}
.bImage{
  width: 50rpx;
  height: 50rpx;
  margin-right: 20rpx;
  background: #fff;
  border-radius: 50%;
}
.bImage image{
  width: 100%;
  height: 100%;
}