.imagesBox{
  width: 100%;
  border-radius: 44rpx;
  background: #fff;
  margin-bottom: 30rpx;
}

.imageCount{
  height: 80rpx;
  line-height: 80rpx;
  font-size: 28rpx;
  font-weight: 400;
  color: #999999;
  padding: 0 4vw;
}

.imagesBoxBody{
  width: 100%;
  padding:0 20rpx;
  display: flex;
  flex-wrap: wrap;
}
.imagesBoxBody .image{
  width: 19vw;
  height: 19vw;
  border-radius: 10rpx;
  margin: 0 1vw 2vw;
  background: #ccc;
  position: relative;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 20rpx;
}
.imagesBoxBody .image .images{
  position: absolute;
  left: 0;
  top: 0;
  border-radius: 10rpx;
  width: 100%;
  height: 100%;
  z-index: 2;
}

.addImageIcon{
  display: flex;
 align-items: center;
 justify-content: center;
  background-color: #f7f7f7;
  width: 19vw;
  height: 19vw;
  border-radius: 10rpx;
  margin: 0 1vw 2vw;
}
.addImageIcon .images{
  width: 50rpx;
  height: 50rpx;
}
.addHover{
  background-color: #C0C4CC;
}
